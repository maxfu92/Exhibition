<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/grid_item_divider" />

            <gradient android:angle="270.0" android:endColor="#ffe8ecef" android:startColor="#ffe8ecef" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ffFAFAD2" android:startColor="#ffFAFAD2" />

            <stroke android:width="1.0px" android:color="@color/grid_item_divider" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/panelBackgroud" android:startColor="@color/panelBackgroud" />

            <stroke android:width="1.0px" android:color="@color/grid_item_divider" />
        </shape>
    </item>

</selector>